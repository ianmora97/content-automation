                    <label for="deployNameadd" class="form-label">Deployment name</label>
                    <input type="text" class="form-control bg-dark-light" id="deployNameadd" placeholder="Name..." autofocus>
                </div>
                <div class="d-flex justify-content-start mb-5">
                    <div class="dropdown d-inline ">
                        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownselectModel" 
                        data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                          Select Model
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownselectModel" 
                        id="dropdownselectModeldd">
                            
                        </ul>
                    </div>
                    <div id="modelSelectadd" class="d-inline ms-3 p-3"
                    style="width: 225px !important; height: 70px; min-width: 225px;"></div>
                    <span class="visually-hidden" id="modeloSeleccionadoAfter_name"></span>
                </div>
                <hr>
                <div class="mb-3">
                    <button type="button" class="btn btn-primary" 
                    onclick="addDeploymentConfirm()">Add Deployment</button>
                </div>
            </div>
        </div>
    </div>
</div>
